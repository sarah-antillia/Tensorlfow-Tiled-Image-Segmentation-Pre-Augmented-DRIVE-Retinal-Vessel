; /Augmented-Tiled-DRIVE

[model]
model         = "TensorflowUNet"
generator     = False
image_width    = 512
image_height   = 512
image_channels = 3
input_normalize = False
normalization  = False
num_classes    = 1
base_filters   = 16
base_kernels   = (9,9)
num_layers     = 8
dropout_rate   = 0.05
learning_rate  = 0.00007
clipvalue      = 0.5
dilation       = (3,3)
;loss           = "bce_iou_loss"
loss           = "bce_dice_loss"
metrics        = ["dice_coef"]
show_summary   = False

[dataset]
;datasetclass  = "BaseImageMaskDataset"
datasetclass  = "ImageMaskDataset"

;Please specify a resize interpolation algorithm in case of ImageMaskDatast.
;resize_interpolation = "cv2.INTER_NEAREST"
resize_interpolation = "cv2.INTER_LINEAR"
;resize_interpolation = "cv2.INTER_AREA"
;resize_interpolation = "cv2.INTER_LANCZOS4"
;resize_interpolation = "cv2.INTER_CUBIC"

[train]
epochs        = 100
batch_size    = 2
steps_per_epoch  = 200
validation_steps = 80
patience      = 10

;metrics       = ["iou_coef", "val_iou_coef"]
metrics       = ["dice_coef", "val_dice_coef"]
;metrics       = ["binary_accuracy", "val_binary_accuracy"]

model_dir     = "./models"
eval_dir      = "./eval"
image_datapath = "../../../dataset/Augmented-Tiled-DRIVE/train/images/"
mask_datapath  = "../../../dataset/Augmented-Tiled-DRIVE/train/masks/"

;Inference execution flag on epoch_changed
epoch_change_infer     = False

; Output dir to save the inferred masks on epoch_changed
epoch_change_infer_dir =  "./epoch_change_infer"

;Tiled-inference execution flag on epoch_changed
epoch_change_tiledinfer     = True

; Output dir to save the tiled-inferred masks on epoch_changed
epoch_change_tiledinfer_dir =  "./epoch_change_tiledinfer"

; The number of the images to be inferred on epoch_changed.
num_infer_images       = 6
create_backup  = False

learning_rate_reducer = True
reducer_factor     = 0.4
reducer_patience   = 4

save_weights_only  = True

[eval]
image_datapath = "../../../dataset/Augmented-Tiled-DRIVE/valid/images/"
mask_datapath  = "../../../dataset/Augmented-Tiled-DRIVE/valid/masks/"

[test] 
image_datapath = "../../../dataset/Augmented-Tiled-DRIVE/test/images/"
mask_datapath  = "../../../dataset/Augmented-Tiled-DRIVE/test/masks/"

[infer] 
images_dir    = "./mini_test/images"
output_dir    = "./mini_test_output"

[tiledinfer] 
overlapping   = 64
images_dir    = "./mini_test/images"
output_dir    = "./mini_test_output_tiled"

[segmentation]
colorize      = True
black         = "black"
white         = "green"
blursize      = None


[image]
color_converter = None
;color_converter = "cv2.COLOR_BGR2HSV_FULL"
gamma           = 0
sharpening      = 0
; 2024/12/14 Enabled constrast_adjuster
contrast_adjuster = False
contrast_alpha   = 2.0
contrast_beta    = 40
reverse           = False

[mask]
blur      = False
blur_size = (5,5)
sbinarize  = False
;threshold = 128
threshold = 80

[generator]
debug        = False
augmentation = True

[augmentor]
vflip    = True
hflip    = True
rotation = True
; angles   = [30, 60, 90, 120, 150, 180, 210, 240, 270, 300, 330]
angles   = [90. 180, 270,]

shrinks  = [0.8]
shears   = [0.1]

deformation = True
distortion  = True
sharpening  = True
brightening = False
; 2024/07/08
barrdistortion = True
pincdistortion = True

[deformation]
alpah     = 1300
sigmoids  = [8.0]

[distortion]
gaussian_filter_rsigma= 40
gaussian_filter_sigma = 0.5
distortions           = [0.02, ]

[barrdistortion]
radius = 0.3
amount = 0.3
centers =  [(0.3, 0.3), (0.7, 0.3), (0.5, 0.5), (0.3, 0.7), (0.7, 0.7)]

[pincdistortion]
radius = 0.3
amount = -0.3
centers =  [(0.3, 0.3), (0.7, 0.3), (0.5, 0.5), (0.3, 0.7), (0.7, 0.7)]

[sharpening]
k        = 1.0

[brightening]
alpha  = 1.2
beta   = 10  
